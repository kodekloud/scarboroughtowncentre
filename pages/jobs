<script>
    $(document).ready(function(e) {
        init(e);
        function renderAll (){
            var jobs = getJobsList();
            renderStoreExtras($('#jobs_container'), $('#jobs_template'), "jobs", jobs);
            show_content();
            more_less(e);
        }
        loadMallData(renderAll); 
