<script>
    $(document).ready(function(e) {
        init(e);
        function renderAll (){
            var all_promos = getPromotionsList();
            all_promos = all_promos.reverse();
            promo_array = []
            $.each( all_promos , function( key, val ){
                today = new Date();
                webDate = new Date(val.show_on_web_date)
                if (today >= webDate) {
                    promo_array.push(val)
                } 
            });
            all_promos = promo_array;
            renderGeneral("#promo_container","#promo_template", all_promos, "promos");
            show_content();
            more_less(e);
        }
        loadMallData(renderAll); 
    })
</script>