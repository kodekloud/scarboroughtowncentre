<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            init_home_hours();
            var params = getRequestParam('query');
            var search_results = getSearchResults(params,10,100);
            renderSearchResultsTemplate('#search_container','#search_template',search_results);
            show_content();
        }
        loadMallDataCached(renderAll); 
    })
</script>