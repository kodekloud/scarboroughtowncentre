<script>
    $(document).ready(function(e) {
        init(e);
        function renderAll (){
            var blog_beauty = getBlogDataBySlug('stc-beauty');
            var blog_lifestyle = getBlogDataBySlug('stc-lifestyle');
            var blog_mens = getBlogDataBySlug("stc-men-s-style");
            var top_blogs = [];
            top_blogs.push(blog_beauty);
            top_blogs.push(blog_lifestyle);
            top_blogs.push(blog_mens);
            var published_posts = getAllPublishedPosts();
            renderTrending("#trending_container", "#trending_template", top_blogs);
            renderPosts("#blog_container", "#blog_template", published_posts);
            init_home_hours();
            show_content();
            load_more(1);
            
            $('#load_more_posts').click(function(){
                var i = $('#num_loaded').val();
                load_more(i);
            });
        }
        loadMallDataCached(renderAll); 
    })
</script>